<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/appHeader') %>
    <main style="margin-top: 3rem">
      <form
        action="/user/blogs/<%= item._id %>"
        method="POST"
        class="auth-form"
      >
        <h1>Edit a blog</h1>
        <p class="error"><%= error %></p>
        <input
          type="text"
          name="title"
          placeholder="Blog title"
          required
          value="<%= item.title %>"
        />
        <input
          type="description"
          name="description"
          placeholder="Description"
          value="<%= item.description %>"
          required
        />
        <input
          type="text"
          name="tags"
          placeholder="Tags (Separate with a comma)"
          value="<%= item.tags %>"
          required
        />
        <!-- add textarea and cover the entire width -->
        <textarea
          name="body"
          id="content"
          rows="10"
          placeholder="Content"
          required
        >
<%= item.body %></textarea
        >

        <button type="submit" class="auth-btn">Submit</button>
      </form>
    </main>
  </body>
</html>
